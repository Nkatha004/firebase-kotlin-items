<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editItem"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            android:layout_margin="40dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameLabel"
                    android:textSize="20sp"
                    android:paddingTop="20dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:hint="@string/nameLabel"
                    android:autofillHints="name"
                    android:inputType="text"
                    android:layout_marginTop="16dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/typeLabel"
                    android:textSize="20sp"
                    android:paddingTop="40dp"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/editTextType"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:hint="@string/typeLabel"
                    android:autofillHints=""
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/locationLabel"
                    android:textSize="20sp"
                    android:paddingTop="40dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:hint="@string/locationLabel"
                    android:autofillHints="location"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lengthLabel"
                    android:textSize="20sp"
                    android:paddingTop="40dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextLength"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:hint="@string/lengthLabel"
                    android:autofillHints=""
                    android:inputType="number"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/widthLabel"
                    android:textSize="20sp"
                    android:paddingTop="40dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextWidth"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:hint="@string/widthLabel"
                    android:autofillHints=""
                    android:inputType="number"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heightLabel"
                    android:textSize="20sp"
                    android:paddingTop="40dp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/editTextHeight"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/heightLabel"
                    android:autofillHints=""
                    android:inputType="number"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statusLabel"
                    android:textSize="20sp"
                    android:paddingTop="40dp"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="40dp"
                    android:paddingBottom="20dp"/>

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:background="#1263A3"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
